                                Click="files_Click"
                                Content="File Size (bytes)"
                                Tag="FileSize2" />
                        </GridViewColumn.Header>
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock
                                    Text="{Binding Path=FileSize2, StringFormat=N0}"
                                    TextAlignment="Right"
                                    TextTrimming="CharacterEllipsis" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>


                    <GridViewColumn Width="80">
                        <GridViewColumn.Header>
                            <GridViewColumnHeader
                                Click="files_Click"
                                Content="CRC32"
                                Tag="CRC32" />
                        </GridViewColumn.Header>
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock
                                    Text="{Binding Path=CRC32, StringFormat=X8}"
                                    TextAlignment="Right"
                                    TextTrimming="CharacterEllipsis" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <GridViewColumn Width="160">
                        <GridViewColumn.Header>
                            <GridViewColumnHeader
                                Click="files_Click"
                                Content="Last Modified date"
                                Tag="lastModifiedDate" />
                        </GridViewColumn.Header>
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Path=lastModifiedDate, StringFormat='yyyy-MM-dd HH:mm:ss.ms', FallbackValue='Unknown'}" TextTrimming="CharacterEllipsis" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                </GridView>
            </ListView.View>
        </ListView>
        <GridSplitter
            x:Name="gsSplitter"
            Grid.Row="2"
            Grid.Column="0"
            Grid.ColumnSpan="4"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Style="{StaticResource HorizontalGridSplitter}" />

        <Grid
            x:Name="gPreview"
            Grid.Row="3"
            Grid.Column="0"
            Grid.ColumnSpan="4">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="41" />
                <ColumnDefinition Width="*" />

            </Grid.ColumnDefinitions>
            <TextBlock
                Grid.Row="0"
                FontSize="14"
                Text="{Binding ElementName=BarView1, Path=SelectedItem.fileNameWithoutPath, StringFormat='File Name: {0}'}"
                TextTrimming="CharacterEllipsis"
                ToolTip="{Binding ElementName=BarView1, Path=SelectedItem.FileNameWithRoot}" />
            <TextBlock
                Grid.Row="1"
                FontSize="14"
                Text="{Binding ElementName=BarView1, Path=SelectedItem.fileFormat, StringFormat='File Format: {0}'}" />
            <TextBlock
                Grid.Row="2"
                FontSize="14"
                Text="{Binding Bar1.PreviewDdt.DdtInfo, StringFormat='Image Format: {0}'}" />

            <Grid
                x:Name="ImageViewer1"
                Grid.Row="3"
                Grid.Column="0"
                Visibility="Collapsed">
                <ScrollViewer
                    Background="White"
                    HorizontalScrollBarVisibility="Visible"
                    VirtualizingPanel.ScrollUnit="Pixel">


                    <Image
                        x:Name="ImagePreview1"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        MouseWheel="ImageViewer1_MouseWheel"
                        RenderOptions.BitmapScalingMode="HighQuality"
                        RenderTransformOrigin="0.5,0.5">
                        <Image.LayoutTransform>
                            <TransformGroup>
                                <ScaleTransform />

                            </TransformGroup>
                        </Image.LayoutTransform>
                    </Image>



                </ScrollViewer>
                <TextBlock
                    Margin="25"
                    Padding="2,4,2,0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    Background="#99FFFFFF"
                    FlowDirection="RightToLeft"
                    MouseDown="TextBlock1_MouseDown"
                    Text="{Binding ZoomValue1, StringFormat='Current Zoom: {0}%'}"
                    TextAlignment="Center" />
            </Grid>
            <Grid
                x:Name="ImageViewer2"
                Grid.Row="3"
                Grid.Column="2"
                Visibility="Collapsed">
                <ScrollViewer
                    Background="White"
                    HorizontalScrollBarVisibility="Visible"
                    VirtualizingPanel.ScrollUnit="Pixel">


                    <Image
                        x:Name="ImagePreview2"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        MouseWheel="ImageViewer2_MouseWheel"
                        RenderOptions.BitmapScalingMode="HighQuality"
                        RenderTransformOrigin="0.5,0.5">
                        <Image.LayoutTransform>
                            <TransformGroup>
                                <ScaleTransform />

                            </TransformGroup>
                        </Image.LayoutTransform>
                    </Image>



                </ScrollViewer>
                <TextBlock
                    Margin="25"
                    Padding="2,4,2,0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    Background="#99FFFFFF"
                    FlowDirection="RightToLeft"
                    MouseDown="TextBlock2_MouseDown"
                    Text="{Binding ZoomValue2, StringFormat='Current Zoom: {0}%'}"
                    TextAlignment="Center" />
            </Grid>
            <TextBlock
                Grid.Row="0"
                Grid.Column="2"
                FontSize="14"
                Text="{Binding ElementName=BarView2, Path=SelectedItem.fileNameWithoutPath, StringFormat='File Name: {0}'}"
                TextTrimming="CharacterEllipsis"
                ToolTip="{Binding ElementName=BarView2, Path=SelectedItem.FileNameWithRoot}" />
            <TextBlock
                Grid.Row="1"
                Grid.Column="2"
                FontSize="14"
                Text="{Binding ElementName=BarView2, Path=SelectedItem.fileFormat, StringFormat='File Format: {0}'}" />
            <TextBlock
                Grid.Row="2"
                Grid.Column="2"
                FontSize="14"
                Text="{Binding Bar2.PreviewDdt.DdtInfo, StringFormat='Image Format: {0}'}" />
            <diffplex:DiffViewer
                x:Name="XMLViewer"
                Grid.Row="3"
                Grid.ColumnSpan="4"
                FontFamily="Consolas"
                FontSize="10pt"
                VirtualizingPanel.IsVirtualizingWhenGrouping="True"
                VirtualizingPanel.ScrollUnit="Pixel"
                Visibility="Collapsed" />


        </Grid>
    </Grid>
</Window>
